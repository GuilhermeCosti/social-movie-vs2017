@using SocialMovie.Models
@using System.Collections.Generic
@model Movie

<h1></h1>

<div class="container-fluid" align="center">
@{
    <div class="row">
        <div class="col-sm-10">
            <div class="row rounded" style="background-color: #CCCCCC">
                <div class="offset-sm-2"></div>
                <div class="col-sm-8">
                    <br />
                    <div align="center" class="embed-responsive embed-responsive-4by3" style="background-color: #5e5e5e">
                        <video class="embed-responsive-item rounded" id="video_@Model.Id" poster="https://socialmovie.sytes.net:4000/@Model.ThumbnailPath" onClick="setupVideo('https', 'socialmovie.sytes.net','4000','@Model.MediaURL', '@Model.File', '@Model.Extension', '@Model.Id')" controls></video>
                    </div>
                    <div class="rounded" style="background-color: #AAAAAA">
                        <h3></h3>
                        <p><strong>@Model.Name </strong>@Model.Description</p>
                    </div>
                </div>
                <div class="offset-sm-2"></div>
            </div>
        </div>
    </div>
    <br />
    <br />
}
</div>