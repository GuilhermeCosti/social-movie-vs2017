@{
}
@{
    Layout = "_HomePageLayout";
}

<div class="container-fluid" style="width: 60%; height:200px; margin: 20% auto 0 auto;">
    <div class="row">
        <div class="offset-lg-4"></div>
        <div class="col-lg-4">
            <form name="loginForm" asp-action="LoginReturn" asp-controller="Account" method="post" style="background-color: #aa1f1f" class="rounded">
                <br />
                <h1>Login</h1>
                <div>
                    <input type="text" name="username" placeholder="Username" />
                </div>
                <div>
                    <input type="password" name="password" placeholder="Password"/>
                </div>
                <div>
                    <input type="submit" name="submit" value="Submit" />
                </div>
                <div>
                    <p>Are you new? <a href="/Account/Register/">Sign Up</a> here!</p>
                </div>
                <br />
            </form>
            <br />
        </div>
        <div class="offset-lg-4"></div>
    </div>
</div>