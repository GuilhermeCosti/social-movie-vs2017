<p onclick='argon("password", "salteado" );'>Click here</p>

<input type="text" name="password" />
<form id="saltForm" asp-action="CheckSalt" asp-controller="Account" method="post" onsubmit="return argon()">
    <input type="hidden" name="salt" value="@ViewBag.Salt" />
    <input type="hidden" name="hash"  />
    <input type="submit" name="submit" value="Submit" />
</form>


<script type="text/javascript">
    function argon() {

        var password = document.getElementByName("password").innerHTML;

        argon2.hash({ pass: password, salt: '@ViewBag.Salt'})
            //.then(h => console.log(h.hash, h.hashHex, h.encoded)
            .then(h => document.getElementById("hash").innerHTML=h.encoded)
            .catch(e => console.error(e.message, e.code));

    }

</script>