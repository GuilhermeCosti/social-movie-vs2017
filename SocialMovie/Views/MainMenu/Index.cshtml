@using SocialMovie.Models
@using System.Collections.Generic
@model IEnumerable<Movie>

<h1>Main Menu</h1>

<div class="container-fluid" align="center">
@{ 
    foreach(var x in @Model) { 
    <div class="row" >
        <div class="col-sm-10" >
            <div class="row rounded" style="background-color: #CCCCCC">
                <div class="col-sm-4">
                    <div>
                        <a href="/Player/Index/@x.Id" >
                            <img src="https://socialmovie.sytes.net:4000/@x.ThumbnailPath" alt="" class="img-thumbnail">
                        </a>
                    </div>
                </div>
                <div class="col-sm-8">
                    <br />
                    <div class="rounded" style="background-color: #AAAAAA">
                        <h3>@x.Description</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />
    <br />
    }
}
</div>
