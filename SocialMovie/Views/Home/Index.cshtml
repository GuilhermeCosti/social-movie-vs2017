@using SocialMovie.Models
@using System.Collections.Generic
@model IEnumerable<Movie>

<h1>Adaptive Streaming with HTML5</h1>

<div class="container">
@{ 
    foreach (var x in @Model)
    {

        <div class="row">
            <div class="col-sm-10">
                <div class="row">
                    <div class="offset-sm-2"></div>
                    <div class="col-sm-8">
                        <div align="center" class="embed-responsive embed-responsive-16by9">
                            <video class="embed-responsive-item" id="video_@x.Id" onClick="setupVideo('http', 'socialmovie.sytes.net','4000','@x.MediaURL', '@x.File', '@x.Extension', '@x.Id')" controls></video>
                        </div>
                    </div>
                    <div class="offset-sm-2"></div>
                </div>
                <div class="row">
                    <div align="center" >
                        <h3></h3>
                        <p><strong>@x.Name: </strong>@x.Description</p>
                    </div>
                </div>
            </div>
        </div>
    }
}
</div>
